{
  "compilerOptions": {
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strict": true,
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs": false,
    "isolatedModules": false,
    "module": "NodeNext",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2021"
    ],
    "target": "es5",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
  ]
}